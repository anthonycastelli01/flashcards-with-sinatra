<link href="/css/signin.css" rel="stylesheet">

<div class="container">
  <form class="form-signin" method="post" action="/users">
    <h2 class="form-signin-heading">Please Sign Up</h2>

    <label for="firstname" class="sr-only">First Name</label>
    <input type="text" name="first_name" class="form-control top-field" placeholder="First Name" required autofocus>

    <label for="lastname" class="sr-only">Last Name</label>
    <input type="text" name="last_name" class="form-control middle-field" placeholder="Last Name">

    <label for="inputEmail" class="sr-only">Email Address</label>
    <input type="email" name="email" class="form-control middle-field" placeholder="Email Address">

    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword" name="password" class="form-control bottom-field" placeholder="Password" required>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
  </form>
</div>